<h1>☁🎐 Lista de Tarefas</h1>

<div style="margin-bottom: 20px;">
  <%= link_to "Todas", tasks_path, class: "btn" %>
  <%= link_to "Pendentes", tasks_path(filter: "pending"), class: "btn" %>
  <%= link_to "Finalizadas", tasks_path(filter: "completed"), class: "btn" %>
  <%= link_to "➕ Nova Tarefa", new_task_path, class: "btn-add" %>
</div>

<table>
  <thead>
    <tr>
      <th>Tarefas</th>
      <th>Status</th>
      <th>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.done ? "✅ Concluída" : "⌛ Pendente" %></td>
        <td>
          <%= link_to 'Editar', edit_task_path(task), class: "btn" %> |
          <%= link_to 'Excluir', task, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



